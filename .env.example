# SSH Server Configuration
# Copy this file to .env and modify the values as needed

# Server Settings
SSH_HOST=0.0.0.0
SSH_PORT=2222

# Host Key Path (SSH server private key)
HOST_KEY_PATH=keys/host_key

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/ssh-server.log

# Environment (development/production)
NODE_ENV=development

# Terminal Settings
# SHELL=/bin/bash
# TERM=xterm-256color

# Lite Mode (disable PTY for compatibility)
# Set to 'true' or '1' to enable lite mode without node-pty dependency
LITE_MODE=false

# User Configuration (Optional - overrides config.js)
# DEFAULT_USER_PASSWORD=123456
# DEFAULT_USER_SHELL=/bin/bash
# DEFAULT_USER_HOME=/tmp

# Security Settings
# ENABLE_PASSWORD_AUTH=true
# ENABLE_PUBLICKEY_AUTH=true

# Advanced Settings
# MAX_CONNECTIONS=10
# CONNECTION_TIMEOUT=300000
# KEEPALIVE_INTERVAL=30000

# Custom Environment Variables for Terminal Sessions
# CUSTOM_LANG=en_US.UTF-8
# CUSTOM_LC_ALL=en_US.UTF-8
# COLORTERM=truecolor
